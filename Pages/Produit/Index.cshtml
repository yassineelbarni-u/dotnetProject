        border: 1px solid #e3e6e6;
        box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
    }

    .typing-amazon {
        display: flex;
        gap: 4px;
        padding: 10px 14px;
    }

    .typing-amazon span {
        width: 8px;
        height: 8px;
        background: #565959;
        border-radius: 50%;
        animation: typingAnim 1.4s infinite;
    }

    .typing-amazon span:nth-child(2) { animation-delay: 0.2s; }
    .typing-amazon span:nth-child(3) { animation-delay: 0.4s; }

    @@keyframes typingAnim {
        0%, 60%, 100% { transform: translateY(0); }
        30% { transform: translateY(-8px); }
    }

    .amazon-chat-footer {
        padding: 12px;
        background: white;
        border-top: 1px solid #e3e6e6;
    }

    .amazon-chat-form {
        display: flex;
        gap: 8px;
    }

    .amazon-chat-input {
        flex: 1;
        border: 1px solid #888c8c;
        border-radius: 4px;
        padding: 10px 12px;
        font-size: 14px;
        outline: none;
        transition: border-color 0.2s;
        font-family: 'Amazon Ember', 'Segoe UI', sans-serif;
    }

    .amazon-chat-input:focus {
        border-color: #febd69;
        box-shadow: 0 0 0 3px rgba(254, 189, 105, 0.1);
    }

    .amazon-send-btn {
        width: 44px;
        height: 44px;
        background: #febd69;
        border: 1px solid #f3a847;
        border-radius: 4px;
        color: #111;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s;
    }

    .amazon-send-btn:hover {
        background: #f3a847;
    }

    .amazon-send-btn:disabled {
        opacity: 0.5;
        cursor: not-allowed;
    }

    @@media (max-width: 768px) {
        .amazon-chat-window {
            width: calc(100% - 20px);
            height: calc(100vh - 80px);
            bottom: 10px;
            right: 10px;
        }

        .amazon-chat-btn {
            bottom: 20px;
            right: 20px;
            width: 56px;
            height: 56px;
        }
    }
</style>

<script>
    const chatBtn = document.getElementById('chatToggleBtn');
    const chatWin = document.getElementById('chatWindow');
    const closeBtn = document.getElementById('chatCloseBtn');
    const chatForm = document.getElementById('chatForm');
    const chatInput = document.getElementById('chatInput');
    const chatBody = document.getElementById('chatBody');
    const sendBtn = document.getElementById('chatSendBtn');

    chatBtn.addEventListener('click', () => {
        chatWin.classList.add('active');
        chatBtn.style.display = 'none';
        chatInput.focus();
    });

    closeBtn.addEventListener('click', () => {
        chatWin.classList.remove('active');
        chatBtn.style.display = 'flex';
    });

    document.querySelectorAll('.quick-btn-amazon').forEach(btn => {
        btn.addEventListener('click', () => {
            chatInput.value = btn.getAttribute('data-question');
            sendMsg();
        });
    });

    chatForm.addEventListener('submit', async (e) => {
        e.preventDefault();
        await sendMsg();
    });

    async function sendMsg() {
        const msg = chatInput.value.trim();
        if (!msg) return;

        const welcome = document.querySelector('.chat-welcome-amazon');
        if (welcome) welcome.remove();

        addUserMsg(msg);
        chatInput.value = '';

        const typing = showTyping();
        sendBtn.disabled = true;

        try {
            const response = await fetch('/Recommendations/Chat', {
                method: 'POST',
                headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                body: `UserMessage=${encodeURIComponent(msg)}&__RequestVerificationToken=@requestToken`
            });

            const html = await response.text();
            const parser = new DOMParser();
            const doc = parser.parseFromString(html, 'text/html');
            const botResp = doc.querySelector('.bot-response');
            
            typing.remove();

            if (botResp) {
                addBotMsg(botResp.innerText);
            } else {
                addBotMsg("D√©sol√©, je n'ai pas pu r√©pondre. R√©essayez.");
            }
        } catch (error) {
            typing.remove();
            addBotMsg(" Erreur : V√©rifiez qu'Ollama est d√©marr√©.");
        } finally {
            sendBtn.disabled = false;
            chatInput.focus();
        }
    }

    function addUserMsg(text) {
        const div = document.createElement('div');
        div.className = 'chat-message-amazon message-user-amazon';
        div.innerHTML = `<div class="msg-bubble">${escapeHtml(text)}</div>`;
        chatBody.appendChild(div);
        scrollBottom();
    }

    function addBotMsg(text) {
        const div = document.createElement('div');
        div.className = 'chat-message-amazon message-bot-amazon';
        div.innerHTML = `
            <div class="bot-avatar-small">ü§ñ</div>
            <div class="msg-bubble">${escapeHtml(text).replace(/\n/g, '<br>')}</div>
        `;
        chatBody.appendChild(div);
        scrollBottom();
    }

    function showTyping() {
        const div = document.createElement('div');
        div.className = 'chat-message-amazon message-bot-amazon';
        div.id = 'typingIndicator';
        div.innerHTML = `
            <div class="bot-avatar-small">ü§ñ</div>
            <div class="msg-bubble typing-amazon">
                <span></span><span></span><span></span>
            </div>
        `;
        chatBody.appendChild(div);
        scrollBottom();
        return div;
    }

    function scrollBottom() {
        chatBody.scrollTop = chatBody.scrollHeight;
    }

    function escapeHtml(text) {
        const div = document.createElement('div');
        div.textContent = text;
        return div.innerHTML;
    }
</script>
