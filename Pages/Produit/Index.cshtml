<script>
    function toggleCart() {
        const sidebar = document.getElementById('cartSidebar');
        if (sidebar.style.display === 'none') {
            sidebar.style.display = 'block';
            loadCartPreview();
        } else {
            sidebar.style.display = 'none';
        }
    }
    
    function loadCartPreview() {
        document.getElementById('cart-content').innerHTML = '<p style="color: #999; text-align: center; margin-top: 50px;">Chargement...</p>';
        
        fetch('/Produit?handler=CartPreview')
            .then(response => response.json())
            .then(data => {
                let html = '';
                
                if (data.items.length === 0) {
                    html = '<p style="color: #999; text-align: center; margin-top: 50px;">Votre panier est vide</p>';
                } else {
                    html = '<div style="padding: 15px;">';
                    data.items.forEach(item => {
                        html += `
                            <div style="border-bottom: 1px solid #eee; padding: 10px 0; margin-bottom: 10px;">
                                <div style="font-weight: 500; margin-bottom: 5px;">${item.nom}</div>
                                <div style="display: flex; justify-content: space-between; color: #666; font-size: 14px;">
                                    <span>Qt√©: ${item.quantite}</span>
                                    <span>$${item.sousTotal.toFixed(0)}</span>
                                </div>
                            </div>
                        `;
                    });
                    html += '</div>';
                }
                
                document.getElementById('cart-content').innerHTML = html;
                document.getElementById('cart-total-amount').textContent = '$' + data.total.toFixed(0);
            })
            .catch(error => {
                console.error('Erreur:', error);
                document.getElementById('cart-content').innerHTML = '<p style="color: red; text-align: center;">Erreur de chargement</p>';
            });
    }
</script>

